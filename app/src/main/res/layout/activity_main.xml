<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4287f5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp" >

        <Button
            android:layout_width="120dp"
            android:layout_height="76dp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnAutomorphic"
            android:text=" Automorphic Number"
            android:textStyle="bold"
            android:background="#e8542e"
            android:layout_marginTop="14dp"

            />
        <Button
            android:layout_width="120dp"
            android:layout_height="76dp"
            android:id="@+id/btnPalindrome"
            android:layout_marginRight="10sp"
            android:text="Palindrome Number"
            android:textStyle="bold"
            android:background="#e8542e"
            android:layout_marginTop="22dp"

            />
        <Button
            android:layout_width="120dp"
            android:layout_marginRight="10sp"
            android:layout_height="76dp"
            android:id="@+id/btnAreaofCircle"
            android:text=" Area of Circle"
            android:textStyle="bold"
            android:background="#e8542e"
            android:layout_marginTop="22dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp" >

        <Button
            android:layout_width="120dp"
            android:layout_marginRight="10sp"
            android:layout_height="76dp"
            android:id="@+id/btnSimpleInterest"
            android:text=" Simple Interest"
            android:textStyle="bold"
            android:background="#e8542e"
            android:layout_marginTop="22dp"

            />
        <Button
            android:layout_width="120dp"
            android:layout_marginRight="10sp"
            android:layout_height="76dp"
            android:id="@+id/btnArmstrong"
            android:text="Armstrong Number"
            android:textStyle="bold"
            android:background="#e8542e"
            android:layout_marginTop="22dp"

            />
        <Button
            android:layout_width="120dp"
            android:layout_marginRight="10sp"
            android:layout_height="76dp"
            android:id="@+id/btnSwapping"
            android:textStyle="bold"
            android:background="#e8542e"
            android:text=" Swapping"
            android:layout_marginTop="29dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/fragmentContainer"
        android:background="#FFFFFF"
        android:orientation="vertical" />


</LinearLayout>