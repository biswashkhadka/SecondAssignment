<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.SimpleInterestFragment">

    <EditText
        android:inputType="number"
        android:id="@+id/etPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Principle"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:inputType="number"
        android:id="@+id/etRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Rate"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:inputType="number"
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Time"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/btnSimpleInterest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="Calculate SI" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSimpleInterest"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"/>


</LinearLayout>